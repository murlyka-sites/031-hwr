.nested-gameplay {
	display flex
	justify-content center

	@media (min-width $md) {
		justify-content flex-end
	}

	&__item {
		&:nth-child(1) {
			position relative
			z-index 3
			margin-top 40px
			margin-right -60px

			@media (min-width $xs) {
				margin-top 100px
				margin-right -140px
			}
		}

		&:nth-child(2) {
			position relative
			z-index 2
			margin-top 20px
			margin-right -60px

			@media (min-width $xs) {
				margin-top 50px
				margin-right -140px
			}
		}
	}
}

.nested-form {
	margin 0 auto
	padding 40px 0
	max-width 100%
	width 1075px
	border-radius 15px
	background-color white
	box-shadow 0 28px 36px 2px rgba(26, 28, 103, .2)
	font-size 0

	&__column {
		display inline-block
		box-sizing border-box
		padding 0 15px 15px
		width 100%

		@media (min-width $sm) {
			padding 0 15px 25px
			width 50%
		}

		@media (min-width $md) {
			width 33.333%
			padding 0 20px 35px
		}

		@media (min-width $lg) {
			padding 0 35px 35px
		}
	}

	&__row {
		color $color-wet-asphalt
		font-size 15px
	}
}

.nested-social {
	display flex
	justify-content center
	margin 0
	padding 0
	list-style-type none

	@media (min-width $md) {
		justify-content flex-start
	}

	&__item {
		margin-right 30px

		&:last-child {
			margin-right 0
		}
	}

	&__link {
		display block

		&:hover {
			opacity .7
		}
	}

	&__icon {
		display block
	}
}
