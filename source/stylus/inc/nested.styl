.nested-main {
	display flex
	flex-direction column
	align-items flex-end
	box-sizing border-box
	margin 0
	max-width 100%
	width 516px

	&__item {
		position relative
		margin-top -5%
		width 70%
		height auto
		border-radius 10px
		box-shadow 0 10px 27px 1px rgba(51, 51, 102, .5)

		@media (min-width $md) {
			position relative
			align-items flex-end
			padding-left 0
		}

		&:nth-child(1) {
			margin-top 0
		}

		&:nth-child(2) {
			left -10%
		}
		&:nth-child(3) {
			left -20%
		}
		&:nth-child(4) {
			left -30%
		}
	}
}

