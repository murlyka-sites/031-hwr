.nested-main {
	box-sizing border-box
	padding-left 32%
	max-width 100%
	margin 0
	width 516px

	@media (min-width $md) {
	}

	&__item {
		position relative
		margin-top -10%
		width 100%
		height auto

		border-radius 10px
		box-shadow 0 10px 27px 1px rgba(51, 51, 102, .5)

		@media (min-width $md) {
				position relative
				align-items flex-end
				padding-left 0
		}

		&:nth-child(1) {
			margin-top 0
		}

		&:nth-child(2) {
			left -15%
		}
		&:nth-child(3) {
			left -30%
		}
		&:nth-child(4) {
			left -45%
		}
	}
}

.nested-innovative {
	box-sizing border-box
	padding-left 44%
	max-width 100%
	width 501px

	&__item {
		position relative
		display block
		width 100%
		height auto

		&:nth-child(2) {
			margin-top -85%
