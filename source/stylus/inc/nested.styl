.nested-course {
	display flex
	flex-direction column
	align-items flex-end
	box-sizing border-box
	max-width 100%
	width 420px

	&__item {
		position relative
		display block
		width 60%
		height auto
		border-radius 10px
		box-shadow 0 8px 16px 1px rgba(0, 0, 0, .21)

		&:nth-child(2) {
