

.field,
.selectric {
	appearance none
	box-sizing border-box
	padding 5px 20px
	height 60px
	border 1px solid $color-gainsborough
	border-radius 5px
	background $color-smoke-white
	color $color-light-gray
	font-weight 400
	font-size 18px
	font-family "Proxima Nova", sans-serif

	placeholder ($color-light-gray)


	&:focus {
		border 1px solid $color-medium-magenta
	}

	&::placeholder {
		color $color-light-gray
	}

	&::selection {
		color $color-light-gray
	}

	&_available {
		display block
		width 100%
	}
}

.field-checkbox {
	flex none
	width 17px
	height 17px
	vertical-align middle
}
