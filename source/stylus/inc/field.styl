.field {
	box-sizing border-box
	padding 20px
	height 60px
	border 1px solid $color-gainsborough
	border-radius 5px
	background $color-smoke-white
	color $color-light-gray
	font-weight 400
	font-size 18px
	font-family "Proxima Nova", sans-serif

	&_available {
		display block
		width 100%
	}
}

.field-checkbox {
	flex none
	width 17px
	height 17px
	vertical-align middle
}
