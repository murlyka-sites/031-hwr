@import "inc/variables"
@import "inc/fonts"
@import "inc/section"
@import "inc/paper"
@import "inc/color"
@import "inc/typo"
@import "inc/text"
@import "inc/gutter"
@import "inc/button"
@import "inc/field"
@import "inc/card"
@import "inc/nested"
@import "inc/popup"
@import "inc/hidden"

.page {
	font-family "Proxima Nova", sans-serif
}

.link {
	color $color-dark-blue
	text-decoration none

	&:hover {
		text-decoration underline
	}
}

.icon-heart {
	vertical-align middle
}

.section-header {
	position absolute
	top 0
	right 0
	left 0

	&__container {
		padding 20px 15px

		@media (min-width $sm) {
			display flex
			justify-content space-between
		}
	}

	&__column {
		&_logo {
			margin-bottom 10px

			@media (min-width $sm) {
				margin-bottom none
			}
		}
	}

	&__logo {}

	&__button {}
}

.section-main {
	box-sizing border-box
	padding 150px 0 40px

	@media (min-width $md) {
		padding 150px 0 100px
	}

	&__container {
		@media (min-width $md) {
			display flex
			align-items flex-start
			justify-content space-between
		}
	}

	&__nested {
		margin-bottom 20px

		@media (min-width $md) {
			margin-bottom 0
		}
	}
}

.section-innovative {
	padding 50px 0

	@media (min-width $md) {
		padding 100px 0
	}

	&__container {
		@media (min-width $md) {
			display flex
			align-items flex-start
			justify-content space-between
		}
	}


	&__column {
		&_desc {
			@media (min-width $md) {
				padding-right 10px
			}
		}
	}
}

.section-training {
	padding 40px 0

	@media (min-width $md) {
		padding 80px 0 60px
	}

	&__container {
		@media (min-width $md) {
			display flex
			justify-content space-between
		}
	}
}

.section-course {
	padding 40px 0

	@media (min-width $md) {
		padding 120px 0 80px
	}

	&__container {
		@media (min-width $md) {
			display flex
			align-items flex-start
			justify-content space-between
		}
	}

	&__nested {

		@media (min-width $md) {
			padding-top 0
		}
	}
}

.section-book {
	padding 40px 0

	@media (min-width $md) {
		padding 60px 0 80px
	}

	&__container {
		@media (min-width $md) {
			display flex
			align-items flex-start
			justify-content space-between
		}
	}

	&__column {
		@media (min-width $md) {
			padding-right 10px
		}

		&_pr {
			flex none
		}
	}
}

.section-gameplay {
	padding 40px 0

	@media (min-width $md) {
			padding 80px 0 95px
	}

	&__container {
		@media (min-width $sm) {
			display flex
			align-items flex-start
			justify-content space-between
		}
	}

	&__pr {
		width 120px
		height auto

		@media (min-width $xs) {
			width 200px
		}

		@media (min-width $md) {
			width 200px
		}

		@media (min-width $lg) {
			width 225px
			height auto
		}
	}
}

.section-teacher {
	padding 40px 0 0

	@media (min-width $md) {
		padding 80px 0 0
	}

	&__container {
		@media (min-width $md) {
			display flex
			justify-content space-between
		}
	}

	&__column {
		&_desc {
			@media (min-width $md) {
				padding-bottom 80px
			}
		}

		&_pr {
			margin-top auto
		}
	}

	&__pr {
		display block
		margin-top auto
		max-width 100%
		height auto
	}
}

.section-cost {
	padding 140px 0 80px
}

.section-register {
	padding 90px 0 60px

	&__form {
		margin-bottom 50px
	}
}

.section-foo {
	padding 60px 0

	&__container {
		display flex
		justify-content space-between
	}

	&__column {
		&_market {
			width 160px
		}

		&_info {
			text-align right
		}
	}

	&__market {
		display block
		width 100%
	}

	&__copy {
		color white
		font-weight 400
		font-size 18px
		font-family "Open Sans", sans-serif
	}

	&__link {
		display inline-block
		font-size 18px

		&:hover {
			text-decoration none
		}
	}

	&__made {
		font-weight 600
		font-size 16px
	}
}
